# Assumes the variabel $(DOCBUILDDIR) is set by the includers

SUFFIXES = .xml .1 .5

HTMLDOCTOOL	 = @HTMLDOCTOOL@
MANDOCTOOL	 = @MANDOCTOOL@

%.html: %.xml
	$(HTMLDOCTOOL) -o $(DOCBUILDDIR)/html/`basename $< .xml`.html $<

%.1: %.1.xml
	$(MANDOCTOOL) -o $(DOCBUILDDIR)/man/man1 $<

%.5: %.5.xml
	$(MANDOCTOOL) -o $(DOCBUILDDIR)/man/man5 $<
